{
  "$schema": "../schema/config_schema.json",
  "config_name": "Splody, 10 remote Gamepad players",
  "events": {
    "file_events": {
      "enabled": true
    }
  },
  "operators": [
    "$broadcaster",
    "reggx"
  ],
  "irc": {
    "host": "irc.chat.twitch.tv",
    "port": 6697,
    "message_interval": 3,
    "connection_timeout": 10,
    "join_rate_limit_amount": 18,
    "join_rate_limit_time": 11
  },
  "sessionlog": {
    "enable_chatlog": true,
    "enable_consolelog": true
  },
  "teams": [
    {
      "type": "Balancing",
      "name": "Team_0",
      "use_random_inputs": true,
      "channels": [
        "reggx"
      ],
      "actionset": {
        "type": "Splody_GP",
        "player_index": 0,
        "input_server": {
          "type": "remote",
          "host": "192.168.178.40",
          "port": 33000
        }
      }
    },
